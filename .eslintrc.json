{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": "off",
    "comma-dangle": "off",
    "space-before-function-paren": "off"
  },
  "globals": {
    "describe": "readonly",
    "it": "readonly"
  }
}
